@import "../welcome/welcome.wxss";

.main-container {
  display: flex;
  flex-direction: column;
  font-family: "Microsoft YaHei";
  font-size: 30rpx;
  color: #343434;
  height: 100vh;
  background-color: #edfcff;
}

.bottom-content {
  height: 75vh;
  display: flex;
  flex-direction: column;
  margin-top: 4.5vh;
}

.pull-down {
  margin-top: 15rpx;
  font-size: 30rpx;
}

.sblue-head {
  height: 16vh;
  margin-top: 10px;
  padding-left: 10%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 40rpx;
  color: #767677;
  font: bold;
}

.sblue-bottom {
  margin-top: 20px;
  padding-left: 10%;
  padding-right: 10%;
  margin-bottom: 20px;
  height: 20vh;
}

.bottom_pull-down {
  font-size: 40rpx;
}

.bottom_pull-down1 {
  margin-top: 5rpx;
  font-size: 25rpx;
}

.sblue-head image {
  height: 121rpx;
  width: 121rpx;
  margin-top: 25rpx;
  margin-bottom: 16rpx;
  margin-right: 32rpx;
}

.sblue-container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-size: cover;
  margin-top: 10px;
  height: 64vh;
  width: 100vw;
  color: #101010;
  z-index: 10;
}

.content_side {
  margin-top: 10px;
  height: 100vh;
  width: 80vw;
  margin-left: 30px;
  margin-right: 30px;
  border: 2rpx #b4b4b4 solid;
  border-radius: 10px;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.sblue-content {
  width: 80vw;
  height: 80vh;
  display: flex;
  flex-direction: row;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}

.sblue-list {
  width: 80vw;
  margin-top: 10px;
}

.sblue-item {
    width: 80vw;
  height: 30px;
  padding-top: 15px;
  padding-bottom: 15px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font: bold;
  border-bottom: 2rpx #b4b4b4 solid;
  background-color: #edfcff;
}

.sblue-item-selected {
  width: 80vw;
  height: 30px;
  padding-top: 15px;
  padding-bottom: 15px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font: bold;
  border-bottom: 2rpx #b4b4b4 solid;
  background-color: #edfcff;
}

.sblue-item-selected text {
  word-wrap: normal break-word;
  font-size: 14px;
}

.sblue-item text {
  word-wrap: normal break-word;
  font-size: 14px;
}

.sblue-connect {
  width: auto;
  position: absolute;
  vertical-align: auto;
  font-size: 36rpx;
  font: bold;
  right: 64rpx;
}

.sblue-item.selected {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.3);
}

.sblue-content image {
  height: 64rpx;
  width: 48rpx;
  margin-left: 24rpx;
  margin-right: 24rpx;
}

.next {
  width: 24rpx;
  height: 24rpx;
  position: fixed;
  right: 24rpx;
  border-top: 4rpx solid rgba(255, 255, 255, 0.3);
  border-right: 4rpx solid rgba(255, 255, 255, 0.3);
  transform: rotate(45deg);
}

.floattop-msg {
  position: fixed;
  right: 30px;
  left: 30px;
  bottom: 40px;
  padding: 0prx;
  margin: 0px;
  background: rgba(255, 255, 255, 0.3);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 48rpx;
}

.floattop-msg text {
  margin: 15rpx 0rpx;
  font-size: 32rpx;
  color: #101010;
  padding: 0px;
}

.floattop-msg navigator {
  font-size: 24rpx;
  color: #0db09b;
  text-align: end;
}

.hide {
  display: none;
}

.sblue-content_bottom {
  width: 80vw;
  height: 20vh;
  background: #fff;
  display: flex;
  flex-direction: row;
  border-bottom-left-radius: 10px;
  border-bottom-right-radius: 10px;
}

.content_bottom_left_in {
  display: flex;
  flex-direction: row;
}

.content_bottom_left {
  width: 50vw;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content_bottom_left image {
  width: 20px;
  height: 20px;
  padding-right: 10px;
}

.line {
  width: 1px;
  background: #b4b4b4;
}
